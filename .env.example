# Server Configuration
NODE_ENV="development"
PORT=3000

# Database connection string (Prisma 7)
# Standard PostgreSQL format
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/smart-restaurant?schema=public"

# For local development with Prisma Postgres
# DATABASE_URL="prisma+postgres://localhost:5432/?api_key=YOUR_API_KEY"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m

# Frontend URL
FRONTEND_URL=http://localhost:3000
CUSTOMER_FRONTEND_URL=http://localhost:3002

# Google OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Email Configuration (Brevo - formerly Sendinblue)
# Get your SMTP credentials from: https://app.brevo.com/settings/keys/smtp
BREVO_SMTP_USER=your-email@domain.com
BREVO_SMTP_KEY=your-smtp-key
BREVO_FROM_EMAIL=noreply@your-domain.com
BREVO_FROM_NAME=your-app-name

# QR Code
QR_API_URL=https://api.qrserver.com/v1/create-qr-code/

# S3 Configuration
S3_REGION=
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=qrenso-images
S3_ENDPOINT=http://localhost:9000
S3_PRESIGNED_URL_EXPIRATION=2